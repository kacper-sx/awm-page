---
import '@/styles/global.css'
import AppHeader from '@/components/AppHeader/AppHeader.astro'

export interface Props {
  title: string
  description: string
  cannonical?: string
  keywords: string
}

const { title, description, cannonical, keywords } = Astro.props as Props
---

<!doctype html>
<html lang='pl'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />

    <meta name='robots' content='index, follow' />
    <meta name='generator' content={Astro.generator} />
    <link rel='canonical' href={cannonical} />
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta name='keywords' content={keywords} />
    <meta property='og:type' content='website' />

    <meta property='og:title' content={'Akademia Wychowania Muzycznego'} />
    <meta
      property='og:description'
      content={'Uczelniany zespół muzyczny z Akademii Wychowania fizycznego z Białej Podlaskiej.'}
    />
    <meta property='og:url' content={'https://awm-awf.pl'} />
    <meta property='og:image' content={'https://awm-awf.pl/og-image.png'} />
    <meta property='og:locale' content={'pl'} />

    <meta name='DC.identifier' content='https://awm-awf.pl' />
    <meta name='DC.creator' content='Kacper Saweczko' />
    <meta name='DC.language' content='pl' />
    <meta name='DC.type' content='website' />
    <meta name='DC.format' content='text/html' />
    <meta name='DC.rights' content='AWF Biała Podlaska ' />
    <meta
      name='DC.subject'
      content={'Uczelniany zespół muzyczny z Akademii Wychowania fizycznego z Białej Podlaskiej.'}
    />
    <script is:inline type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Akademia Wychowania Muzycznego",
        "image": "https://awm-awf.pl/logo.ico",
        "@id": "https://awm-awf.pl",
        "url": "https://awm-awf.pl",
        "telephone": "+48 600 115 821",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "ul. Akademicka 2",
          "addressLocality": "Biała Podlaska",
          "postalCode": "21-500",
          "addressCountry": "PL"
        }
      }
    </script>
    <script
      defer
      src='https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js'
    ></script>
  </head>
  <body>
    <!-- <Splash /> -->
    <AppHeader />

    <slot />

    <!-- <AppFooter /> -->
  </body>
</html>

<script>
  import Lenis from 'lenis'
  declare global {
    interface Window {
      lenis: Lenis
    }
  }
  window.lenis = new Lenis({ autoRaf: true })
</script>
