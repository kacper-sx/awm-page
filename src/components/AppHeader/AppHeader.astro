---
import MobileNav from '@/components/AppHeader/MobileNav.astro'
import { navData } from '@/components/AppHeader/navData'
import Image from 'astro/components/Image.astro'
import logo from '@/assets/logo-header.avif'
---

<header
  class:list={[
    'flex w-full fixed left-0 z-99 top-0 px-spaced items-center h-24 gap-12',
    '[&>nav]:flex-1 [&>nav>ul]:flex [&>nav>ul]:items-center [&>nav>ul]:gap-16',
    '[&>nav.dn]:lg:block [&>nav.dn]:hidden backdrop-blur-md',
  ]}
>
  <nav class='dn'>
    <ul class='justify-end'>
      {
        navData.slice(0, navData.length / 2).map(({ href, title }) => (
          <li class='relative shrink-0 inline-flex items-center group transition overflow-clip font-semibold px-8 lg:text-xl'>
            <a class:list={['']} href={href}>
              <span
                aria-hidden='true'
                class='absolute bottom-0 -left-full group-hover:left-0 w-full bg-bbrand-green h-px transition-[left] inline-flex'
              />
              {title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <a href='/' class='text-center justify-center items-center px-3 py-1'>
    <Image src={logo} alt='Logo' class='h-12 w-24 xl:h-20 xl:w-42' />
  </a>
  <nav class='dn'>
    <ul>
      {
        navData.slice(navData.length / 2).map(({ href, title }) => (
          <li class='relative shrink-0 inline-flex items-center group transition overflow-clip font-semibold px-8 lg:text-xl'>
            <a class:list={['']} href={href}>
              <span
                aria-hidden='true'
                class='absolute bottom-0 -left-full group-hover:left-0 w-full bg-bbrand-green h-px transition-[left] inline-flex'
              />
              {title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <MobileNav />
</header>
